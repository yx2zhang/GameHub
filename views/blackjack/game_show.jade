script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')

link(rel='stylesheet', href='/stylesheets/blackjack.css')
link(rel='stylesheet', href='/stylesheets/style.css')

div.blackJackContainer
	div.gameTopBar 
		span.gameTitle Black Jack
		div.playerBid
			span.bidText.moneyItem Bid
			span.bjPlayerBid.moneyItem 0
		div.playerMoney
			span.moneyText.moneyItem Money
			span.bjPlayerMoney.moneyItem #{data.players[1].money}
	div.blackJackTable
		div.blackJackDealer
			div.blackJackHand.dealer
		div.blackJackPlayer
			div.blackPlayerHands
				div.blackJackHand.current
	div.blackJackMenu
		div.bidMenu
			input(type= "button",value="$1", id="$1",class='blackJackChip blackJackBidButton gameButton',disabled='disabled')
			input(type= "button",value="$5", id="$5",class='blackJackChip blackJackBidButton gameButton',disabled='disabled')
			input(type= "button",value="$10", id="$10",class='blackJackChip blackJackBidButton gameButton',disabled='disabled')
			input(type= "button",value="$20", id="$20",class='blackJackChip blackJackBidButton gameButton',disabled='disabled')
		div.optionMenu
			input(type= "button",value="split", id="blackJackSplit",class='blackJackOptionButton gameButton', disabled='disabled')
			input(type= "button",value="double", id="blackJackDouble",class='blackJackOptionButton gameButton',disabled='disabled')
			input(type= "button",value="stand", id="blackJackStand",class='blackJackOptionButton gameButton',disabled='disabled')
			input(type= "button",value="hit", id="blackJackHit",class='blackJackOptionButton gameButton',disabled='disabled')
			input(type= "button",value="deal", id="blackJackDeal",class='blackJackOptionButton gameButton',disabled='disabled')
			input(type= "button",value="start", id="blackJackStart",class='blackJackOptionButton gameButton')
